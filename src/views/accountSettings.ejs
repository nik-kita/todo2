<%- contentFor('content') %>
    <% if (isAdmin) { %>
        <div class="flex-center-all">
            <button>
                <a href="<%= `${baseUrl}/user/users${qstrNikToken}` %>">
                    Show me all users!
                </a>
            </button>
        </div>
    <% } else { %>
        <div class="flex-center-all">
            <form id="update-to-admin-form" method="POST" action="<%= `${baseUrl}/user/admin${qstrNikToken}` %>">
                <label for="sudo">Update to admin:</label>
                <input name='sudo' placeholder="Input sudo password">
                <button type="submit">Make me admin!</button>
            </form>
        </div>
    <% } %>
